# Synthetic Workforce Simulator Configuration
# Copy to .env and fill in your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Groq API Key - Get from https://console.groq.com
GROQ_API_KEY=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

# PostgreSQL Database URL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/workforce_simulator

# Redis URL for caching and rate limiting
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Application name
APP_NAME=Synthetic Workforce Simulator

# API version
API_VERSION=v1

# Server settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Debug mode (disable in production)
DEBUG=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Secret key for session management (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-change-in-production

# =============================================================================
# RATE LIMITING
# =============================================================================

# Maximum requests per window
RATE_LIMIT_REQUESTS=100

# Rate limit window in seconds
RATE_LIMIT_WINDOW=60

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable structured JSON logging
JSON_LOGS=true

# Prometheus metrics endpoint enabled
METRICS_ENABLED=true

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# Groq model to use
GROQ_MODEL=llama-3.3-70b-versatile

# Maximum tokens per response
GROQ_MAX_TOKENS=2048

# Temperature for generation (0.0 - 2.0)
GROQ_TEMPERATURE=0.7

# Request timeout in seconds
GROQ_TIMEOUT=30

# Maximum retries for failed requests
GROQ_MAX_RETRIES=3

# =============================================================================
# SIMULATION SETTINGS
# =============================================================================

# Maximum turns per simulation
MAX_SIMULATION_TURNS=50

# Maximum concurrent simulations
MAX_CONCURRENT_SIMULATIONS=10

# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=60

# Memory retention period in days
MEMORY_RETENTION_DAYS=30

# =============================================================================
# DATABASE POOL SETTINGS
# =============================================================================

# Minimum pool connections
DB_POOL_MIN=5

# Maximum pool connections
DB_POOL_MAX=20

# Connection timeout
DB_POOL_TIMEOUT=30
